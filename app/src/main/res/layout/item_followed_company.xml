<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <com.google.android.material.card.MaterialCardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="3dp"
      app:cardPreventCornerOverlap="true"
      app:cardUseCompatPadding="true"
      >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <ImageView
          android:id="@+id/ivCompany"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginBottom="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="9dp"
          android:src="@drawable/test_company_iv"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintDimensionRatio="W,1:1"
          app:layout_constraintEnd_toStartOf="@id/guideline3"
          app:layout_constraintHorizontal_bias="0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <TextView
          android:id="@+id/tvCompanyName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:text="Kolesa"
          android:textAppearance="@style/Body1"
          android:textStyle="bold"
          app:layout_constraintStart_toEndOf="@id/ivCompany"
          app:layout_constraintTop_toTopOf="@id/ivCompany"
          />
      <TextView
          android:id="@+id/tvAboutCompany"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginBottom="16dp"
          android:layout_marginEnd="16dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="@id/tvCompanyName"
          app:layout_constraintTop_toBottomOf="@id/tvCompanyName"
          />
      <androidx.constraintlayout.widget.Barrier
          android:id="@+id/barrier2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:barrierDirection="left"
          app:constraint_referenced_ids="tvCompanyName"
          />
      <androidx.constraintlayout.widget.Guideline
          android:id="@+id/guideline3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.24"
          />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </com.google.android.material.card.MaterialCardView>
</layout>