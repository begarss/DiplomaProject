<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/ivBack"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="12dp"
      android:backgroundTint="@color/cardview_light_background"
      android:clickable="true"
      android:elevation="14dp"
      android:focusable="true"
      android:src="@drawable/ic_back"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:borderWidth="0dp"
      app:tint="@color/black"
      style="@style/Widget.MaterialComponents.FloatingActionButton"
      />
  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/ivShare"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_gravity="bottom|start|center_vertical"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="12dp"
      android:backgroundTint="@color/cardview_light_background"
      android:clickable="true"
      android:elevation="14dp"
      android:focusable="true"
      android:src="@drawable/ic_share"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:borderWidth="0dp"
      style="@style/Widget.MaterialComponents.FloatingActionButton"
      />
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:fillViewport="true"
      app:layout_constraintBottom_toTopOf="@id/bottom_container"
      app:layout_constraintTop_toTopOf="parent"
      >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <ImageView
          android:id="@+id/ivCompany"
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:layout_marginHorizontal="32dp"
          android:layout_marginTop="48dp"
          android:src="@drawable/test_company_big"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />
      <TextView
          android:id="@+id/tvPostTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:text="Android developer"
          android:textAlignment="center"
          android:textAppearance="@style/Body1"
          android:textSize="18sp"
          app:layout_constraintTop_toBottomOf="@id/ivCompany"
          />
      <TextView
          android:id="@+id/tvCompanyName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="10dp"
          android:text="Google /"
          android:textAlignment="center"
          android:textAppearance="@style/Body1"
          android:textSize="18sp"
          app:layout_constraintEnd_toStartOf="@+id/tvCompanyLocation"
          app:layout_constraintHorizontal_bias="0.5"
          app:layout_constraintHorizontal_chainStyle="packed"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tvPostTitle"
          />
      <TextView
          android:id="@+id/tvCompanyLocation"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginTop="10dp"
          android:drawablePadding="4dp"
          android:text="Location"
          android:textAlignment="center"
          android:textAppearance="@style/Caption"
          android:textSize="18sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.5"
          app:layout_constraintStart_toEndOf="@+id/tvCompanyName"
          app:layout_constraintTop_toBottomOf="@id/tvPostTitle"
          app:drawableStartCompat="@drawable/ic_location"
          />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>

  <View
      android:id="@+id/shopping_cart_view_shadow"
      android:layout_width="match_parent"
      android:layout_height="8dp"
      android:background="@drawable/footer_drop_shadow"
      app:layout_constraintBottom_toTopOf="@id/bottom_container"
      />
  <LinearLayout
      android:id="@+id/bottom_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="@color/white"
      android:orientation="horizontal"
      android:padding="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      >
    <ImageView
        android:id="@+id/ivSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_bookmark_big"
        />
    <Button
        android:id="@+id/shopping_cart_place_an_order_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:text="APPLY"
        android:textAllCaps="false"
        android:textAppearance="@style/Body1"
        style="@style/MainButtonStyle"
        />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>