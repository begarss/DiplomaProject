<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Theme.App.Starting" parent="Theme.SplashScreen">
    // Set the splash screen background, animated icon, and animation duration.
    <item name="windowSplashScreenBackground">@color/primary</item>

    // Use windowSplashScreenAnimatedIcon to add either a drawable or an
    // animated drawable. One of these is required.
    <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>


    // Set the theme of the Activity that directly follows your splash screen.
    <item name="postSplashScreenTheme">@style/Theme.DiplomaProject</item>  # Required.
  </style>

  <style name="RoundedTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" >
    <item name="boxBackgroundColor">@color/mid_gray</item>
    <item name="boxCornerRadiusBottomEnd">10dp</item>
    <item name="boxCornerRadiusBottomStart">10dp</item>
    <item name="boxCornerRadiusTopEnd">10dp</item>
    <item name="boxCornerRadiusTopStart">10dp</item>
    <item name="boxStrokeWidth">0dp</item>
    <item name="boxStrokeWidthFocused">0dp</item>
    <item name="hintEnabled">false</item>
    <item name="boxStrokeErrorColor">#E31E1E</item>
  </style>

  <style name="MainButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:height">48dp</item>
    <item name="android:background">@drawable/button_main_background</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">16sp</item>
  </style>


  <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorOnPrimary">@color/white</item>
  </style>

  <style name="FilterChip" parent="Widget.MaterialComponents.Chip.Choice">
    <item name="chipCornerRadius">8dp</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textAppearance">@style/Body1</item>
    <item name="chipMinTouchTargetSize">0dp</item>
    <item name="chipStrokeWidth">1dp</item>
    <item name="chipStrokeColor">@color/chip_stroke_color_selector</item>
    <item name="chipBackgroundColor">@drawable/background_bordered_chip</item>
    <item name="android:textColor">@drawable/chip_text_color_selector</item>
  </style>

  <style name="CustomBottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/ModalStyle</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorAccent">@color/primary</item>
    <item name="colorButtonNormal">@color/primary</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowIsFloating">false</item>
  </style>

  <style name="ModalStyle" parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/rounded_dialog</item>
    <item name="behavior_hideable">true</item>
    <item name="behavior_skipCollapsed">true</item>
  </style>

</resources>